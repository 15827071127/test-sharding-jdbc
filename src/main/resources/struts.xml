<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	
	<constant name="struts.ognl.allowStaticMethodAccess" value="false" />
	
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	
	<constant name="struts.multipart.saveDir" value="/usr/local/tomcat/temp" />

	<constant name="struts.multipart.maxSize" value="25165824000" />
	
	<constant name="struts.convention.package.locators" value="isofts" />
	
	<constant name="struts.action.excludePattern" value="/services/.*"></constant>
	
	<!-- 去掉.action后缀 -->
	<constant name="struts.action.extension" value=","></constant>
	
	<!-- json日期格式化（去掉T） -->
	<constant name="struts.json.dateformat" value="yyyy-MM-dd HH:mm:ss" />
</struts>